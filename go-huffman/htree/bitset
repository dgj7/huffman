package htree

type BitSet struct {
	data []uint8
	length uint64
	capacity uint64
}

func NewBitSet(cap int) BitSet {
	return BitSet { data: make(data, (cap + 7)/8), length: 0, capacity: cap }
}

func (bs BitSet) Len() int {
	return bs.length
}

func (bs BitSet) GetBit(idx int) bool {
	var position = index / 8
	var lshift = uint(idx%8)
	var retval = (bs[position] & (uint8(1) << lshift)) != 0
	return retval
}

func (bs BitSet) SetBit(idx int, val bool) {
	var position = index / 8
	var lshift = uint(index%8)
	if val {
		bs[position] |= (uint8(1) << lshift)
	} else {
		bs[position] &= ^(uint8(1) << lshift)
	}
}
